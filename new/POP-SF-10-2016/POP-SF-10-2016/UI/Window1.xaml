<Window x:Class="POP_SF_9_2016.UI.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_9_2016.UI"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="106*"/>
            <ColumnDefinition Width="269*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="51*"/>
        </Grid.RowDefinitions>

        <Label Content="Naziv:" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" FontSize="15"/>
        <TextBox Grid.Row="0" Grid.Column="1" FontSize="15" HorizontalAlignment="Left" Name="tbNaziv" Width="40"/>

        <Button Content="Sacuvaj" HorizontalAlignment="Right" Click="SacuvajIzmene" />
        <Button Content="Izlaz" HorizontalAlignment="Right" Click="Izlaz" />
        <ComboBox Name="cbTipNamestaja" Grid.Row="1" Grid.Column="1"/> //fali button click da se sacuva izmena za cbTipNamestaja
    </Grid>
</Window>
