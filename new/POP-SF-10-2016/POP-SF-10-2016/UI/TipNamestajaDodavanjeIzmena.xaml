<Window x:Class="POP_SF_10_2016.UI.TipNamestajaDodavanjeIzmena"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_10_2016.UI"
        mc:Ignorable="d"
        Title="Tip namestaja dodavanje izmena" Height="300" Width="300">
    <Grid>
        <Label Content="Naziv:" HorizontalAlignment="Left" Height="28" Margin="10,10,0,0" VerticalAlignment="Top" Width="97"/>
        <TextBox Name="tbNaziv" HorizontalAlignment="Left" Height="28" Margin="107,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding Path=Naziv}" Width="145"/>
        <CheckBox Name="cbObrisan" Content="Obrisan" HorizontalAlignment="Left" Height="34" Margin="80,94,0,0" IsChecked="{Binding Path=Obrisan}" VerticalAlignment="Top" Width="83"/>
        <Button Content="Ok" Name="Potvrdi" Click="Potvrdi_Click" HorizontalAlignment="Left" Height="24" Margin="40,220,0,0" VerticalAlignment="Top" Width="89"/>
        <Button Content="Cancel" Name="Odustani" Click="Odustani_Click"  HorizontalAlignment="Left" Height="24" Margin="163,220,0,0" VerticalAlignment="Top" Width="89"/>
        

    </Grid>
</Window>
