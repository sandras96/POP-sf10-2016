<Window x:Class="POP_SF_10_2016.UI.NamestajWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_10_2016.UI"
        mc:Ignorable="d"
        Title="Namestaj" Height="300" Width="572">
    <Grid Margin="0,0,0,-2">


        <DataGrid AutoGenerateColumns="True" Name="dgNamestaj" Height="222" VerticalAlignment="Top" >
            <DataGrid.Columns>

                <DataGridTextColumn Header="Naziv" Width="*" Binding="{Binding Naziv}"/>
                <DataGridTextColumn Header="Tip namestaja" Width="*" Binding="{Binding TipNamestaja}"/>
                <DataGridTextColumn Header="Cena" Width="100" Binding="{Binding JedinicnaCena}"/>
                <DataGridTextColumn Header="Kolicina" Width="50" Binding="{Binding KolicinaUMagacinu}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Dodavanje" HorizontalAlignment="Left" Height="32" Margin="60,229,0,0" Click="Dodavanje" VerticalAlignment="Top" Width="66"/>
        <Button Content="Izmena" Click="Izmena" HorizontalAlignment="Left" Height="32" Margin="327,227,0,0" VerticalAlignment="Top" Width="67"/>
        <Button Content="Brisanje" Click="Brisanje" HorizontalAlignment="Left" Height="32" Margin="194,229,0,0" VerticalAlignment="Top" Width="67" RenderTransformOrigin="2.1,1.556"/>
        <Button Content="Ponisti" Click="Ponisti" HorizontalAlignment="Left" Height="32" Margin="459,227,0,0" VerticalAlignment="Top" Width="67"/>

    </Grid>
</Window>
