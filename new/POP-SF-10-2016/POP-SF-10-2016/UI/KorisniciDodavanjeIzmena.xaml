<Window x:Class="POP_SF_10_2016.UI.KorisniciDodavanjeIzmena"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_10_2016.UI"
        mc:Ignorable="d"
        Title="KorisniciDodavanjeIzmena" Height="300" Width="300">
    <Grid>
        <Label Content="Ime:" Name="tbIme" HorizontalAlignment="Left" Height="24" Margin="10,10,0,0" VerticalAlignment="Top" Width="38"/>
        <Label Content="Prezime:" Name="tbPrezime" HorizontalAlignment="Left" Height="24" Margin="10,39,0,0" VerticalAlignment="Top" Width="57"/>
        <Label Content="Korisnicko ime:" Name="tbKorisnickoIme" HorizontalAlignment="Left" Height="24" Margin="10,93,0,0" VerticalAlignment="Top" Width="89"/>
        <Label Content="Lozinka:" Name="tbLozinka" HorizontalAlignment="Left" Height="24" Margin="10,122,0,0" VerticalAlignment="Top" Width="57"/>
        <Label Content="Tip korisnika:" HorizontalAlignment="Left" Height="24" Margin="10,191,0,0" VerticalAlignment="Top" Width="89"/>
        <ComboBox Name="cbTipKorisnika" HorizontalAlignment="Left" Height="24" Margin="118,191,0,0" SelectedItem="{Binding Path=TipKorisnika}" VerticalAlignment="Top" Width="128"/>
        <Button Content="Izlaz" Click="Izlaz" HorizontalAlignment="Left" Height="21" Margin="186,238,0,0" VerticalAlignment="Top" Width="71"/>
        <Button Content="Sacuvaj" Click="Sacuvaj" HorizontalAlignment="Left" Height="21" Margin="67,238,0,0" VerticalAlignment="Top" Width="79"/>

    </Grid>
</Window>
